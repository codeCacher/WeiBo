<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cs.microblog">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application android:name=".custom.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/d_erha"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.SplashActivity" android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.MainActivity" />
        <activity android:name=".activity.WebViewActivity" />
        <activity android:name=".activity.PictureViewerActivity" />
    </application>

</manifest>