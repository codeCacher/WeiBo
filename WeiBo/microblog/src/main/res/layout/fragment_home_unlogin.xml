<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorWhite"
        android:shadowColor="@color/colorGrayWhite"
        android:shadowDy="1"
        android:shadowRadius="1">

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:text="注册"
            android:textColor="@color/colorOrange" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:text="微博"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="登录"
            android:textColor="@color/colorOrange" />

    </RelativeLayout>

    <RelativeLayout
        android:background="@color/colorGrayWhite"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_span"
            android:layout_alignBottom="@+id/iv_alpha"
            android:layout_centerHorizontal="true"
            android:src="@drawable/visitordiscover_feed_image_smallicon"
            android:layout_width="200dp"
            android:layout_height="200dp" />
        <ImageView
            android:background="@drawable/alpha_rectagle_shape"
            android:id="@+id/iv_alpha"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="100dp" />
        <ImageView
            android:layout_above="@+id/tv_attach"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:src="@drawable/visitordiscover_feed_image_house"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <TextView
            android:id="@+id/tv_attach"
            android:layout_below="@id/iv_alpha"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorGrayBlack"
            android:text="关注一些人，看看有什么惊喜"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/bt_tofollow"
            android:layout_below="@+id/tv_attach"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@color/colorGrayWhite"
            android:text="去关注"
            android:textColor="@color/colorOrange" />

    </RelativeLayout>


</LinearLayout>