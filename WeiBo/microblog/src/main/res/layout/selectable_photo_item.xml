<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.facebook.drawee.view.SimpleDraweeView
        android:background="@drawable/compose_photo_photograph"
        android:id="@+id/iv_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/iv_cloud"
        android:background="@color/transclute"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:padding="5dp"
        android:id="@+id/iv_state"
        android:src="@drawable/select_none_selected_round"
        android:layout_alignTop="@+id/iv_photo"
        android:layout_alignRight="@+id/iv_photo"
        android:layout_width="30dp"
        android:layout_height="30dp" />

</RelativeLayout>