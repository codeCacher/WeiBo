<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorWhite"
        android:shadowColor="@color/colorGrayWhite"
        android:shadowDy="1"
        android:shadowRadius="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="消息"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorGrayWhite"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_message"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:src="@drawable/visitordiscover_image_message" />

        <TextView
            android:id="@+id/tv_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_message"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="登录后，别人评论你的微博，给你\n发消息，都会在这里收到通知"
            android:textColor="@color/colorGrayBlack" />

        <LinearLayout
            android:id="@+id/ll_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_notice"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_register"
                android:layout_width="120dp"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                android:background="@color/colorGrayWhite"
                android:text="注册"
                android:textColor="@color/colorOrange" />

            <Button
                android:id="@+id/bt_login"
                android:layout_width="120dp"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                android:background="@color/colorGrayWhite"
                android:text="登录"
                android:textColor="@color/colorBlack" />
        </LinearLayout>


    </RelativeLayout>

</LinearLayout>