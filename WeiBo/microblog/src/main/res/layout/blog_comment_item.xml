<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_comment_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@drawable/selector_background_color">

    <com.cs.microblog.view.CircleImageView
        android:id="@+id/iv_comment_title"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:textColor="@color/colorBlack"
        android:id="@+id/tv_comment_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/iv_comment_title"
        android:layout_toRightOf="@+id/iv_comment_title"
        android:text="text"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_comment_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_comment_user_name"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/iv_comment_title"
        android:layout_toRightOf="@+id/iv_comment_title"
        android:text="text"
        android:textColor="@color/colorGrayBlack"
        android:textSize="13sp" />

    <TextView
        android:layout_margin="10dp"
        android:id="@+id/tv_comment_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_comment_info"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@+id/iv_comment_title"
        android:text="hahahahahahah"
        android:textColor="@color/colorBlack"
        android:textSize="17sp" />

    <View
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_comment_title"
        android:layout_alignParentBottom="true"
        android:background="@color/colorGrayWhite"
        android:layout_width="match_parent"
        android:layout_height="2px" />

</RelativeLayout>